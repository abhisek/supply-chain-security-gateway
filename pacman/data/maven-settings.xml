<settings>
    <servers>
        <server>
            <id>security-gateway</id>
            <username>{{GATEWAY_USERNAME}}</username>
            <password>{{GATEWAY_PASSWORD}}</password>
            <configuration>
                <httpHeaders>
                    <property>
                        <name>X-SGW-Project-Id</name>
                        <value>${project.name}</value>
                    </property>
                    <property>
                        <name>X-SGW-Project-Env</name>
                        <value>${env.SGW_PROJECT_ENV}</value>
                    </property>
                    <property>
                        <name>X-SGW-Project-Labels</name>
                        <value>${env.SGW_PROJECT_ENV}</value>
                    </property>
                </httpHeaders>
            </configuration>
        </server>
    </servers>

    <mirrors>
        <mirror>
            <id>security-gateway</id>
            <mirrorOf>*</mirrorOf>
            <url>{{GATEWAY_MAVEN_CENTRAL_URL}}</url>
        </mirror>
    </mirrors>

    <profiles>
        <profile>
            <id>security-gateway</id>
            <repositories>
                <repository>
                    <id>central</id>
                    <url>http://central</url>
                    <releases><enabled>true</enabled></releases>
                    <snapshots><enabled>true</enabled></snapshots>
                </repository>
            </repositories>

            <pluginRepositories>
                <pluginRepository>
                    <id>central</id>
                    <url>http://central</url>
                    <releases><enabled>true</enabled></releases>
                    <snapshots><enabled>true</enabled></snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>

    <activeProfiles>
        <activeProfile>security-gateway</activeProfile>
    </activeProfiles>
</settings>
