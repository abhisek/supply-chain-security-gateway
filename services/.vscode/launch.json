  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Current Service",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${file}",
      "env": {
        "GLOBAL_CONFIG_PATH": "${workspaceFolder}/../config/global.yml",
        "SERVICE_TLS_CERT": "${workspaceFolder}/../pki/tap/server.crt",
        "SERVICE_TLS_KEY": "${workspaceFolder}/../pki/tap/server.key",
        "SERVICE_TLS_ROOT_CA": "${workspaceFolder}/../pki/root.crt"
      }
    }
  ]
}
